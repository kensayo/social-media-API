<% if current_user.id != user.id %>
  <div class="card m-1" style="width: 18rem;">
    <div class="card-body d-flex flex-column justify-content-between">
      <div class="d-flex justify-content-between align-items-center">
        <h2 class="card-title fw-bold"><%= user.name %></h2>
        <% if !Friendship.requested?(current_user.id, user.id) %>
          <%= link_to 'Add friend', user_add_friend_path(user), method: :post, class: 'fw-bold text-success text-decoration-none' %>
        <% end %>
      </div>
      <% if user.posts.last != nil %>
        <p class="fs-6 text-success">Most Recent post: </p>
        <p class="card-text fs-5"><%=  truncate(user.posts.last.content.to_s, length: 25, omission: '...')  %></p>
      <% end %>
      <%= link_to 'See Profile',  user_path(user), class: 'btn btn-success w-100' %>
    </div>
  </div>
<% end %>